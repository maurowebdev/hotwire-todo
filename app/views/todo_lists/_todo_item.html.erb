<div class="p-2 rounded-lg <%= item.completed? ? 'bg-green-200' : 'bg-gray-200'%> text-xl flex justify-between" id="<%= dom_id(item) %>">
  <%= item.name %>
  <%= check_box_tag "completed", 1, item.completed?, id: dom_id(item, :checkbox), class: "w-10 h-10 rounded-full text-indigo-300",
  data: { controller: "checkbox", action: "change->checkbox#update", checkbox_url_value: url_for([item.todo_list, item]), locals: { todo_list: item.todo_list }}
  %>
<%= button_to "Destroy", todo_list_todo_item_path(item.todo_list, item), method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
</div>
